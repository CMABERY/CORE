{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cpo-contracts@0.1.0/drift_event.schema.json",
  "title": "CPO Drift Event",
  "type": "object",
  "required": [
    "protocol_version",
    "type",
    "severity",
    "signal",
    "requires_review"
  ],
  "properties": {
    "protocol_version": {
      "const": "cpo-contracts@0.1.0"
    },
    "type": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "requires_review": {
      "type": "boolean"
    },
    "detected_in_state_snapshot_id": {
      "type": "string"
    },
    "signal": {
      "type": "object",
      "required": [
        "dedup_key"
      ],
      "properties": {
        "dedup_key": {
          "type": "string"
        },
        "scan_now": {
          "type": "string"
        },
        "window_start": {
          "type": "string"
        },
        "window_end_bucket": {
          "type": "string"
        },
        "thresholds": {
          "type": "object"
        },
        "observations": {
          "type": "object"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}