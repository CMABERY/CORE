{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "evidence-pack@1.0.0/file_hashes.schema.json",
  "title": "Evidence Pack File Hashes",
  "type": "object",
  "required": [
    "algo",
    "files",
    "root"
  ],
  "properties": {
    "algo": {
      "type": "string"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "hash"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "root": {
      "type": "string"
    }
  },
  "additionalProperties": false
}