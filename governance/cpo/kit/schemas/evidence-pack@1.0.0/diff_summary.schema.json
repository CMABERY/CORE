{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "evidence-pack@1.0.0/diff_summary.schema.json",
  "title": "Evidence Pack Diff Summary",
  "type": "object",
  "required": [
    "changes",
    "revalidation"
  ],
  "properties": {
    "baseline_pack_id": {
      "type": "string"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "surface",
          "severity",
          "change"
        ],
        "properties": {
          "surface": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          },
          "change": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "revalidation": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "required",
          "surface",
          "reason_code"
        ],
        "properties": {
          "required": {
            "type": "boolean"
          },
          "surface": {
            "type": "string"
          },
          "reason_code": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}