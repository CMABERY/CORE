{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cpo-contracts@0.1.0/exception.schema.json",
  "title": "CPO Exception",
  "type": "object",
  "required": [
    "protocol_version",
    "exception_id",
    "policy_check_id",
    "scope",
    "expiry_at",
    "justification",
    "approved_by",
    "created_at",
    "created_by"
  ],
  "properties": {
    "protocol_version": {
      "const": "cpo-contracts@0.1.0"
    },
    "exception_id": {
      "type": "string"
    },
    "policy_check_id": {
      "type": "string"
    },
    "scope": {
      "type": "object"
    },
    "expiry_at": {
      "type": "string",
      "format": "date-time"
    },
    "justification": {
      "type": "string",
      "minLength": 1
    },
    "compensating_controls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "fix_forward_action": {
      "type": "string"
    },
    "approved_by": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "expired",
        "closed"
      ],
      "default": "active"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    }
  },
  "additionalProperties": false
}