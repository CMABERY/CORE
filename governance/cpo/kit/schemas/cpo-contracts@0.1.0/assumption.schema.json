{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cpo-contracts@0.1.0/assumption.schema.json",
  "title": "CPO Assumption",
  "type": "object",
  "required": [
    "protocol_version",
    "assumption_id",
    "statement",
    "test_plan",
    "expiry_at",
    "status",
    "created_at",
    "created_by"
  ],
  "properties": {
    "protocol_version": {
      "const": "cpo-contracts@0.1.0"
    },
    "assumption_id": {
      "type": "string"
    },
    "statement": {
      "type": "string",
      "minLength": 1
    },
    "why_adopted": {
      "type": "string"
    },
    "test_plan": {
      "type": "string",
      "minLength": 1
    },
    "expiry_at": {
      "type": "string",
      "format": "date-time"
    },
    "owner": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "validated",
        "falsified",
        "retired"
      ]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    }
  },
  "additionalProperties": false
}