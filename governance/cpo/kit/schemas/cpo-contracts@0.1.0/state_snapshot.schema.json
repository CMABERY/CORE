{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cpo-contracts@0.1.0/state_snapshot.schema.json",
  "title": "CPO State Snapshot",
  "type": "object",
  "required": [
    "protocol_version",
    "state_snapshot_id",
    "mode",
    "objective",
    "open_decision_refs",
    "open_assumption_refs",
    "created_at",
    "created_by"
  ],
  "properties": {
    "protocol_version": {
      "const": "cpo-contracts@0.1.0"
    },
    "state_snapshot_id": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "enum": [
        "Explore",
        "Evaluate",
        "Decide",
        "Execute",
        "Reflect",
        "Emergency"
      ]
    },
    "mode_reason": {
      "type": "string"
    },
    "mode_entered_at": {
      "type": "string",
      "format": "date-time"
    },
    "objective": {
      "type": "string",
      "minLength": 1
    },
    "open_decision_refs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "open_assumption_refs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "term_refs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    }
  },
  "additionalProperties": false
}